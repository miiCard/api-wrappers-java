<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<context-param>
		<param-name>MiiCardConsumerKey</param-name>
		<param-value>test1key</param-value>
	</context-param>
	<context-param>
		<param-name>MiiCardConsumerSecret</param-name>
		<param-value>Test1secret</param-value>
	</context-param>

    <servlet>
        <servlet-name>ImageServlet</servlet-name>
        <servlet-class>com.miicard.consumers.testharness.ImageServlet</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>CardImageServlet</servlet-name>
        <servlet-class>com.miicard.consumers.testharness.CardImageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConnectMiicardServlet</servlet-name>
        <servlet-class>com.miicard.consumers.testharness.ConnectMiicardServlet</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>ConnectMiicardCallbackServlet</servlet-name>
        <servlet-class>com.miicard.consumers.testharness.ConnectMiicardCallbackServlet</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>SHA1Servlet</servlet-name>
    	<servlet-class>com.miicard.consumers.testharness.SHA1Servlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ImageServlet</servlet-name>
        <url-pattern>/assuranceimage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CardImageServlet</servlet-name>
        <url-pattern>/cardimage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>ConnectMiicardServlet</servlet-name>
    	<url-pattern>/miicard/connect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>ConnectMiicardCallbackServlet</servlet-name>
    	<url-pattern>/miicard/callback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>SHA1Servlet</servlet-name>
    	<url-pattern>/sha1</url-pattern>
    </servlet-mapping>    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
